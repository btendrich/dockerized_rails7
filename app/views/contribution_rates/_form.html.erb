<%= form_with(model: contribution_rate, class: "contents") do |form| %>
  <% if contribution_rate.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(contribution_rate.errors.count, "error") %> prohibited this contribution_rate from being saved:</h2>

      <ul>
        <% contribution_rate.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
