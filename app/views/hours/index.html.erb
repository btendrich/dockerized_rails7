<%- title 'List Hours' %>
<div class="container mx-auto block">
	<table class="table-auto w-full">
	  <thead>
	    <tr class='bg-teal-100'>
	      <th class='p-3'><%= sortable_link_for :date %></th>
	      <th class='p-3'><%= sortable_link_for :when %></th>
	      <th class='p-3'><%= sortable_link_for :employee_id %></th>
	      <th class='p-3'><%= sortable_link_for :rate_id %></th>
	      <th class='p-3'><%= sortable_link_for :quantity %></th>
	      <th class='p-3 text-right'><%= link_to 'New hour', new_hour_path, class: 'bg-teal-600 text-gray-100 p-2 mr-2 hover:bg-teal-700 rounded-xl'%></th>
	    </tr>
	  </thead>
	  <tbody>
			<% @hours.each do |hour| %>
	    <tr class='bg-gray-100 hover:bg-gray-200'>
	      <td class='p-1.5'><%= hour.date %></td>
	      <td class='p-1.5'><%= hour.when %></td>
	      <td class='p-1.5'><%= hour.employee.full_name %></td>
	      <td class='p-1.5'><%= hour.rate.name %></td>
	      <td class='p-1.5'><%= hour.quantity %></td>
	      <td class='p-1.5 text-right'>
	      	<%= link_to 'Show', hour_path(hour), class: 'bg-green-200 p-1 mr-1 hover:bg-green-300 rounded-md'%>
	      	<%= link_to 'Edit', edit_hour_path(hour), class: 'bg-blue-200 p-1 mr-1 hover:bg-blue-300 rounded-md'%>
	      	<%= link_to 'Destroy', hour_path(hour), data: { "turbo-method": :delete, turbo_confirm: 'Are you sure?' }, class: 'bg-red-200 p-1 mr-1 hover:bg-red-300 rounded-md'%>
				</td>
	    </tr>
			<% end %>
	  </tbody>
	</table>

<div class="flex mt-3 items-center justify-center space-x-4 w-full">
  <%== pagy_nav(@pagy) %>
</div>
<p class="text-center mt-3 text-gray-500"><%== pagy_info @pagy %></p>

</div>
