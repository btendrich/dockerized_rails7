Generate new hire paperwork for: <%= @employee.full_name %>
<%= form_with(url: generate_paperwork_path, method: :post, class: "w-full max-w-lg") do |form| %>

  <div class="md:flex md:items-center mt-6 mb-1">
    <div class="md:w-1/3">
      <%= form.label :ssn, 'SSN', class: 'block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4' %>
    </div>
    <div class="md:w-2/3">
      <%= form.text_field 'generate[ssn]', maxlength: 11, placeholder: 'xxx-xx-xxxx', class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
			<% if @errors[:ssn] %>
		  <p class="text-red-500 text-xs italic"><%= @errors[:ssn] %></p>
			<% end %>
    </div>
  </div>

  <div class="md:flex md:items-center mt-6 mb-1">
    <div class="md:w-1/3">
      <%= form.label :date, 'Date', class: 'block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4' %>
    </div>
    <div class="md:w-2/3">
      <%= form.date_field 'generate[date]', value: Date.today, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
			<% if @errors[:date] %>
		  <p class="text-red-500 text-xs italic"><%= @errors[:date] %></p>
			<% end %>
    </div>
  </div>
	
	<hr>
	
	<% @defaults.each do |name, value| %>
  <div class="md:flex md:items-center mt-6 mb-1">
    <div class="md:w-1/3">
      <%= form.label name, name.to_s.titleize, class: 'block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4' %>
    </div>
    <div class="md:w-2/3">
      <%= form.text_field "generate[#{name}]", placeholder: value, value: value, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
			<% if @errors[name] %>
		  <p class="text-red-500 text-xs italic"><%= @errors[name] %></p>
			<% end %>
    </div>
  </div>
	<% end %>


</div>
  <div class="md:flex md:items-center">
    <div class="md:w-1/3"></div>
    <div class="md:w-2/3">
      <%= form.button 'Generate', class: "shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded", type: 'submit',  data: { turbo: false } %>
    </div>
  </div>

<% end %>
