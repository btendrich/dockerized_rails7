<div class="container mx-auto block">
	<table class="table-auto w-full">
	  <thead>
	    <tr class='bg-blue-300'>
	      <th class='p-3'>Employee Name</th>
	      <th class='p-3'>Classification</th>
	      <th class='p-3 text-right'><%= link_to 'New Employee', new_employee_path, class: 'bg-green-200 p-2 mr-2 hover:bg-green-300 rounded-xl'%></th>
	    </tr>
	  </thead>
	  <tbody>
			<% @employees.each do |employee| %>
	    <tr class='bg-gray-100 hover:bg-gray-200'>
	      <td class='p-1.5'><%= employee.full_name %></td>
	      <td class='p-1.5'><%= employee.classification %></td>
	      <td class='p-1.5 text-right'>
	      	<%= link_to 'Show', employee_path(employee), class: 'bg-blue-200 p-1 mr-1 hover:bg-blue-300 rounded-md'%>
	      	<%= link_to 'Edit', edit_employee_path(employee), class: 'bg-blue-200 p-1 mr-1 hover:bg-blue-300 rounded-md'%>
	      	<%= link_to 'Destroy', employee_path(employee), data: { "turbo-method": :delete, turbo_confirm: 'Are you sure?' }, class: 'bg-blue-200 p-1 mr-1 hover:bg-blue-300 rounded-md'%>
				</td>
	    </tr>
			<% end %>
	  </tbody>
	</table>

</div>

