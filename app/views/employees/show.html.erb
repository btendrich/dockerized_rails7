<%- title "Employee Details - #{@employee.full_name}" %>
<div class="mx-auto w-full pb-6 text-right">
    <%= link_to 'Edit Record', edit_employee_path(@employee), class: "mt-2 rounded-lg py-2 px-2 bg-blue-300 inline-block font-medium" %>
   	<%= link_to 'Destroy', employee_path(@employee), data: { "turbo-method": :delete, turbo_confirm: 'Are you sure?' }, class: 'ml-1 rounded-lg py-2 px-2 bg-red-300 inline-block font-medium'%>
    <%= link_to 'Generate Paperwork', generate_paperwork_path(@employee), class: "ml-1 rounded-lg py-2 px-2 bg-purple-300 inline-block font-medium" %>
    <%= link_to 'Employee List', employees_path, class: "ml-2 rounded-lg py-2 px-2 bg-gray-300 inline-block font-medium" %>
</div>

<div class="mx-auto w-full pb-6">
	<span class="text-4xl font-semibold">Employee: <%= @employee.full_name %></span>
</div>

<div class="flex mx-auto w-full">
	<div class="mx-auto w-full">
		<!-- container with detailed employee record -->
		<div class="mx-auto w-full">
		  <div class="md:flex md:items-center mt-3 ">
		    <div class="md:w-1/3 ">
					<span class="block text-gray-900 font-bold md:text-right mb-1 md:mb-0 pr-4">Record Number</span>
		    </div>
		    <div class="md:w-2/3">
					<span class="block text-gray-700 md:text-left mb-1 md:mb-0 pr-4"><%= @employee.id %></span>
		    </div>
		  </div>
		  <div class="md:flex md:items-center mt-3 ">
		    <div class="md:w-1/3 ">
					<span class="block text-gray-900 font-bold md:text-right mb-1 md:mb-0 pr-4">Last Name</span>
		    </div>
		    <div class="md:w-2/3">
					<span class="block text-gray-700 md:text-left mb-1 md:mb-0 pr-4"><%= @employee.last_name %></span>
		    </div>
		  </div>
		  <div class="md:flex md:items-center mt-0 ">
		    <div class="md:w-1/3 ">
					<span class="block text-gray-900 font-bold md:text-right mb-1 md:mb-0 pr-4">First Name</span>
		    </div>
		    <div class="md:w-2/3">
					<span class="block text-gray-700 md:text-left mb-1 md:mb-0 pr-4"><%= @employee.first_name %></span>
		    </div>
		  </div>
		  <div class="md:flex md:items-center mt-0 ">
		    <div class="md:w-1/3 ">
					<span class="block text-gray-900 font-bold md:text-right mb-1 md:mb-0 pr-4">Date Of Birth</span>
		    </div>
		    <div class="md:w-2/3">
					<span class="block text-gray-700 md:text-left mb-1 md:mb-0 pr-4"><%= @employee.dob %></span>
		    </div>
		  </div>

		  <div class="md:flex md:items-center mt-3 ">
		    <div class="md:w-1/3 ">
					<span class="block text-gray-900 font-bold md:text-right mb-1 md:mb-0 pr-4">Address Line 1</span>
		    </div>
		    <div class="md:w-2/3">
					<span class="block text-gray-700 md:text-left mb-1 md:mb-0 pr-4"><%= @employee.address1 %></span>
		    </div>
		  </div>
		  <div class="md:flex md:items-center mt-0 ">
		    <div class="md:w-1/3 ">
					<span class="block text-gray-900 font-bold md:text-right mb-1 md:mb-0 pr-4">Address Line 2</span>
		    </div>
		    <div class="md:w-2/3">
					<span class="block text-gray-700 md:text-left mb-1 md:mb-0 pr-4"><%= @employee.address2 %></span>
		    </div>
		  </div>
		  <div class="md:flex md:items-center mt-0 ">
		    <div class="md:w-1/3 ">
					<span class="block text-gray-900 font-bold md:text-right mb-1 md:mb-0 pr-4">City</span>
		    </div>
		    <div class="md:w-2/3">
					<span class="block text-gray-700 md:text-left mb-1 md:mb-0 pr-4"><%= @employee.city %></span>
		    </div>
		  </div>
		  <div class="md:flex md:items-center mt-0 ">
		    <div class="md:w-1/3 ">
					<span class="block text-gray-900 font-bold md:text-right mb-1 md:mb-0 pr-4">State</span>
		    </div>
		    <div class="md:w-2/3">
					<span class="block text-gray-700 md:text-left mb-1 md:mb-0 pr-4"><%= @employee.state %></span>
		    </div>
		  </div>
		  <div class="md:flex md:items-center mt-0 ">
		    <div class="md:w-1/3 ">
					<span class="block text-gray-900 font-bold md:text-right mb-1 md:mb-0 pr-4">Zip Code</span>
		    </div>
		    <div class="md:w-2/3">
					<span class="block text-gray-700 md:text-left mb-1 md:mb-0 pr-4"><%= @employee.zip %></span>
		    </div>
		  </div>

		  <div class="md:flex md:items-center mt-3 ">
		    <div class="md:w-1/3 ">
					<span class="block text-gray-900 font-bold md:text-right mb-1 md:mb-0 pr-4">Phone</span>
		    </div>
		    <div class="md:w-2/3">
					<% if @employee.phone.empty? %>
					<span class="block text-gray-700 md:text-left mb-1 md:mb-0 pr-4"></span>
					<% else %>
					<span class="block text-gray-700 md:text-left mb-1 md:mb-0 pr-4"><%= link_to @employee.phone, "tel:#{@employee.phone}" %> (<%= link_to 'SMS', "sms:#{@employee.phone}" %>)</span>
					<% end %>
		    </div>
		  </div>
		  <div class="md:flex md:items-center mt-0 ">
		    <div class="md:w-1/3 ">
					<span class="block text-gray-900 font-bold md:text-right mb-1 md:mb-0 pr-4">E-Mail Address</span>
		    </div>
		    <div class="md:w-2/3">
					<span class="block text-gray-700 md:text-left mb-1 md:mb-0 pr-4"><%= link_to_if (not @employee.email.blank?), @employee.email, "mailto:#{@employee.email}" %></span>
		    </div>
		  </div>

		  <div class="md:flex md:items-center mt-3 ">
		    <div class="md:w-1/3 ">
					<span class="block text-gray-900 font-bold md:text-right mb-1 md:mb-0 pr-4">Affiliation Organization</span>
		    </div>
		    <div class="md:w-2/3">
					<span class="block text-gray-700 md:text-left mb-1 md:mb-0 pr-4"><%= @employee.affiliation_organization %></span>
		    </div>
		  </div>
		  <div class="md:flex md:items-center mt-0 ">
		    <div class="md:w-1/3 ">
					<span class="block text-gray-900 font-bold md:text-right mb-1 md:mb-0 pr-4">Affiliation Card Number</span>
		    </div>
		    <div class="md:w-2/3">
					<span class="block text-gray-700 md:text-left mb-1 md:mb-0 pr-4"><%= @employee.affiliation_card_number %></span>
		    </div>
		  </div>
		  <div class="md:flex md:items-center mt-3 ">
		    <div class="md:w-1/3 ">
					<span class="block text-gray-900 font-bold md:text-right mb-1 md:mb-0 pr-4">Payroll Code</span>
		    </div>
		    <div class="md:w-2/3">
					<span class="block text-gray-700 md:text-left mb-1 md:mb-0 pr-4"><%= @employee.payroll_code %></span>
		    </div>
		  </div>
		  <div class="md:flex md:items-center mt-0 ">
		    <div class="md:w-1/3 ">
					<span class="block text-gray-900 font-bold md:text-right mb-1 md:mb-0 pr-4">Payroll Active</span>
		    </div>
		    <div class="md:w-2/3">
					<span class="block text-gray-700 md:text-left mb-1 md:mb-0 pr-4"><%= @employee.payroll_active %></span>
		    </div>
		  </div>
		  <div class="md:flex md:items-center mt-0 ">
		    <div class="md:w-1/3 ">
					<span class="block text-gray-900 font-bold md:text-right mb-1 md:mb-0 pr-4">Keycard Number</span>
		    </div>
		    <div class="md:w-2/3">
					<span class="block text-gray-700 md:text-left mb-1 md:mb-0 pr-4"><%= @employee.keycard_number %></span>
		    </div>
		  </div>
		  <div class="md:flex md:items-center mt-0 ">
		    <div class="md:w-1/3 ">
					<span class="block text-gray-900 font-bold md:text-right mb-1 md:mb-0 pr-4">Classification</span>
		    </div>
		    <div class="md:w-2/3">
					<span class="block text-gray-700 md:text-left mb-1 md:mb-0 pr-4"><%= @employee.employee_classification.name %></span>
		    </div>
		  </div>

		  <div class="md:flex md:items-center mt-3 ">
		    <div class="md:w-1/3 ">
					<span class="block text-gray-900 font-bold md:text-right mb-1 md:mb-0 pr-4">Notes</span>
		    </div>
		    <div class="md:w-2/3">
					<span class="block text-gray-700 md:text-left mb-1 md:mb-0 pr-4"><%= @employee.notes %></span>
		    </div>
		  </div>

		</div>
	</div>
	<div class="mx-auto w-full">
		Here goes calculated stats for the employee
	</div>
</div>

